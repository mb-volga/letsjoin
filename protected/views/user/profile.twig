{# dir: user #}
{% extends "layouts/content.twig" %}

{% block headTitle %}
    Профиль
{% endblock headTitle %}

{% block content %}
{% if CApp.app().isGuest %}
<p>Войдите</p>
{% else %}

<table border="1" cellspacing="4" cellpadding="4">
    <tr>
        <th>{{ user.getAttributeLabel('nickname') }}</th>
        <th>{{ user.getAttributeLabel('email') }}</th>
        <th>{{ user.getAttributeLabel('phone') }}</th>
    </tr>
    <tr>
        <td>{{ user.nickname }}</td>
        <td>{{ user.email }}</td>
        <td>{{ user.phone }}</td>
    </tr>
</table>
{% endif %}
{% endblock content %}
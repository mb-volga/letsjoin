{% extends "admin/index.twig" %}

{% block headTitle %}
    {{ parent() }}
    Добавить пользователя
{% endblock headTitle %}

{% block content %}
{% if CApp.app().hasFlash('reg') %}
<h1>{{ CApp.app().getFlash('reg') }}</h1>
{% endif %}
<div id="registration">
    <form method="POST" name="registration" id="form-registration">
        <div>
            <label for="email" class="requared">{{ user.getAttributeLabel('email') }}</label>
            <input id="email" type="text" name="registration[email]"/>
        </div>
        <div>
            <label for="pass" class="requared">{{ user.getAttributeLabel('password') }}:</label>
            <input id="pass" type="password" name="registration[password]"/>
        </div>
        <div>
            <label for="nickname" class="requared">{{ user.getAttributeLabel('nickname') }}:</label>
            <input id="nickname" type="text" name="registration[nickname]"/>
        </div>        
        <div>
            <label for="phone" class="requared">{{ user.getAttributeLabel('phone') }}:</label>
            <input id="phone" type="text" name="registration[phone]"/>
        </div>
        
        <div>
            <label class="requared">{{ regions[0].getAttributeLabel('title') }}:</label>
            <select name="registration[id_city]">
                <option value="">Выберите регион</option>
                {% for region in regions %}
                <option value="{{ region.id }}">{{ region.title }}</option>
                {% endfor %}
            </select>
        </div> 
        
        <div>
            <label class="requared">{{ citys[0].getAttributeLabel('title') }}:</label>
            <select name="registration[id_city]">
                <option value="">Выберите город</option>
                {% for city in citys %}
                <option value="{{ city.id }}">{{ city.title }}</option>
                {% endfor %}
            </select>
        </div>       
        
        <div>
            <label for="ban">{{ user.getAttributeLabel('ban') }}:</label>
            <select id="ban" name="registration[ban]">
                <option value="">Выберите..</option>
                <option value="0">Нет</option>
                <option value="1">Да</option>
            </select>
        </div>
        
        {{ CHtml.input('Регистрация', {'type':'submit'})|raw }}
    </form>
</div>
{% endblock content %}
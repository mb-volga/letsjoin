{% extends "layouts/content.twig" %}

{% block content %}
    {% if not items %}
        <p>Неправильный запрос</p>
    {% else %}
        {% for item in items %}
            <div class="block">
                {{ CHtml.link(item.title, 'category/groups/'~item.id)|raw }}
            </div>
        {% endfor %}
    {% endif %}
{% endblock content %}